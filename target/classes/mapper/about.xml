<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="about">
	
	<select id="info" resultType="About">
		SELECT * FROM about;
	</select>
	
	<update id="modify">
		UPDATE about
		SET content = #{content}
	</update>
	
</mapper>